-- Question 1 🗑️ Drop index IdxPhone from customers table
DROP INDEX IdxPhone ON customers;

-- Question 2 👤 Create user bob with secure password, restricted to localhost
CREATE USER 'bob'@'localhost' IDENTIFIED BY 'S$cu3r3!';

-- Question 3 🔑 Grant INSERT privilege on salesDB to user bob
GRANT INSERT ON salesDB.* TO 'bob'@'localhost';

-- Question 4 🔐 Change password for bob
ALTER USER 'bob'@'localhost' IDENTIFIED BY 'P$55!23';
